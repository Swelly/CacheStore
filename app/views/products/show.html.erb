<!-- Rails 5 caching Digest (takes notice if this changes) -->
<% cache @product do %>

  <p id="notice"><%= notice %></p>

  <h2>
    <strong>Name:</strong>
    <%= @product.name %>
  </h2>

  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <!-- Rendering a collection of reviews (plural!) which is automatically looped through -->
  <%= render @product.reviews %>

  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>

<% end %>
